<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SudokuGame.MainPage">

    <StackLayout BackgroundColor="#e42b31">
        <Frame BackgroundColor="DarkRed" Padding="24" CornerRadius="0">
            <Label Text="Sudoku DNR Studios" 
                   HorizontalTextAlignment="Center" 
                   TextColor="White" 
                   FontSize="36"/>
        </Frame>
        <Label Text="Start to play now!" 
               HorizontalTextAlignment="Center" 
               FontSize="Title" 
               TextColor="White"
               FontAttributes ="Bold" 
               TextDecorations="Underline" 
               Padding="30,10,30,10"/>
        <Button Text="Click here to play" 
                Clicked="OnDisplayActionSheetButtonClicked" 
                TextColor="White" 
                BackgroundColor="#e42b31" 
                BorderColor="#e42b31" 
                BorderWidth="1" 
                CornerRadius="5" 
                WidthRequest="10" 
                HeightRequest="100"/>
        <Label Text=" "></Label>
        <Image Source="https://gaycenter.org/wp-content/uploads/2019/05/dnr_logo.jpg" HeightRequest="300"/>
        
    </StackLayout>

</ContentPage>
